# ============================================
# ChronoShift Agent Service - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Command: copy .env.example .env

# ============================================
# Backend API Configuration
# ============================================
BACKEND_BASE_URL=http://localhost:4000

# ============================================
# Mistral AI Configuration (FREE)
# ============================================
# Get your FREE API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key-here

# Mistral Provider
LLM_PROVIDER=mistral

# Mistral Model (free tier: mistral-small-latest, mistral-tiny-latest)
LLM_MODEL=mistral-small-latest

# ============================================
# Service Configuration (Optional)
# ============================================
AGENTS_SERVICE_PORT=8001
TIMEOUT_SECONDS=300
MAX_RETRIES=3

# ============================================
# LangChain Tracing (Optional)
# ============================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=chronoshift-agents
